generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name        String?
  username    String
  password    String 
  avatarUrl   String?
  bio         String?
  verified    Boolean  @default(false)
  contacts   Contact[]
}

model Contact {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    
  name      String    @unique
  avatarUrl   String?
  bio   String?
  messages Messages[]
  contactId String 
  post    User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

model Messages {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  message String
  seenMessage  Boolean
  sendMessageTime     DateTime
  senderId      String
  recieverId    String
  post    Contact   @relation(fields: [contactId], references: [id])
  contactId String @db.ObjectId
}

model otpSchema {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String  @unique
  otp     String
}